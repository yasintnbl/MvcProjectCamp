
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h1>İstatistikler</h1>
<br />
<div class="info-box mb-3 bg-warning">
    <span class="info-box-icon"><i class="fas fa-tag"></i></span>

    <div class="info-box-content">
        <span class="info-box-text">Toplam Kategori Sayısı</span>
        <span class="info-box-number">@ViewBag.Gorev1</span>
    </div>
</div>

<div class="info-box mb-3 bg-success">
    <span class="info-box-icon"><i class="fas fa-tag"></i></span>

    <div class="info-box-content">
        <span class="info-box-text">Başlık Tablosunda "Yazılım" Kategorisine Ait Başlık Sayısı</span>
        <span class="info-box-number">@ViewBag.Gorev2</span>
    </div>
</div>

<div class="info-box mb-3 bg-primary">
    <span class="info-box-icon"><i class="fas fa-tag"></i></span>

    <div class="info-box-content">
        <span class="info-box-text">Yazar Adında 'A' harfi Geçen Yazar Sayısı</span>
        <span class="info-box-number">@ViewBag.Gorev3</span>
    </div>
</div>

<div class="info-box mb-3 bg-danger">
    <span class="info-box-icon"><i class="fas fa-tag"></i></span>

    <div class="info-box-content">
        <span class="info-box-text">En Fazla Başlığa Sahip Kategori Adı</span>
        <span class="info-box-number">@ViewBag.Gorev4</span>
    </div>
</div>

<div class="info-box mb-3 bg-dark">
    <span class="info-box-icon"><i class="fas fa-tag"></i></span>

    <div class="info-box-content">
        <span class="info-box-text">Kategori Tablosunda Durumu "True" ile "False" Olanlar Arasındaki Fark</span>
        <span class="info-box-number">@ViewBag.Gorev5</span>
    </div>
</div>

