@using EntityLayer.Concrete
@model List<About>
@{ string status = "";}
@{ string statusButton = "";}
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımda Veri Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Hakkımda Başlığı</th>
        <th>Aktif ve Pasif</th>
        
    </tr>
    @foreach (var item in Model)
    {
        if (item.AboutStatus == true)
        {
            status = "Pasif Yap";
        }
        if (item.AboutStatus == false)
        {
            status = "Aktif Yap";
        }
        if (item.AboutStatus == true)
        {
            statusButton = "btn btn-danger";
        }
        if (item.AboutStatus == false)
        {
            statusButton = "btn btn-warning";
        }
<tr>
    <td>@item.AboutID</td>
    <td>@item.AboutHeading</td>
    <td><a href="/About/StatusActiveAndPassive/@item.AboutID" class="@statusButton">@status</a></td>
</tr>
    }

</table>
<button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">
    Yeni Hakkımızda Yazı Girişi
</button>

@Html.Action("AboutPartial", "About")