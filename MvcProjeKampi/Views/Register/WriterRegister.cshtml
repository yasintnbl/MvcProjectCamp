
@model EntityLayer.Concrete.Writer
@{ Layout = null; }

<!doctype html>
<html lang="en">
<head>
    <title>Yazar Kayıt Sayfası</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/signup-form-19/css/style.css">

</head>
<body class="img" style="background-image: url(images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">

            </div>
            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-5">
                    <div class="login-wrap">
                        <h3 class="text-center mb-4">Hesabınızı Oluşturun</h3>
                        <form method="POST" id="signup-form" class="signup-form">
                            <div class="form-group mb-3">
                                <label class="label" for="email">Mail Adresiniz</label>
                                <input type="text" name="WriterMail" class="form-control" placeholder="Mail Adresiniz">
                                <span class="icon fa fa-paper-plane-o"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label class="label" for="email">Adınız</label>
                                <input type="text" name="WriterName" class="form-control" placeholder="Adınız">
                                <span class="icon fa fa-paper-plane-o"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label class="label" for="email">Soyadınız</label>
                                <input type="text" name="WriterSurname" class="form-control" placeholder="Soyadınız">
                                <span class="icon fa fa-paper-plane-o"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label class="label" for="password">Şifre</label>
                                <input id="password" type="password" name="WriterPassword" class="form-control" placeholder="Şifre">
                                <span toggle="#password" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                <span class="icon fa fa-lock"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3" id="submit">Oluştur</button>
                            </div>
                        </form>
                        <p>Zaten Üyeyim! <a href="/Login/WriterLogin">Giriş Yap</a></p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/signup-form-19/js/jquery.min.js"></script>
    <script src="~/signup-form-19/js/popper.js"></script>
    <script src="~/signup-form-19/js/bootstrap.min.js"></script>
    <script src="~/signup-form-19/js/main.js"></script>

</body>
</html>

